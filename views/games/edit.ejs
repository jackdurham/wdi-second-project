<h1>Edit An Already Existng Game</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
  <form action="/games/<%= game.id %>" method="POST">
    <input type="hidden" value="PUT" name="_method">

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= game.name %>" class="form-control">
    </div>

    <div class="form-group">
      <label for="review">Review</label>
      <textarea name="review" class="u-fullwidth form-control"><%= game.review %></textarea>
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      <input type="text" name="rating" value="<%= game.rating %>" class="form-control">
    </div>

    <div class="form-group">
      <label for="image">Image link</label>
      <input type="text" name="image" value="<%= game.image %>" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Edit Game</button>


  </form>
  </div>
</div>
