<h1>Leave your own review</h1>

<form method="POST" action="/games">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter name" name="name">
  </div>

  <div class="form-group">
    <label for="review">Review</label>
    <input type="text" class="form-control" placeholder="Review" name="review">
  </div>

  <div class="form-group">
    <label for="rating">Rating</label>
    <input type="text" class="form-control" placeholder="Rating" name="rating">
  </div>

  <div class="form-group">
    <label for="image">Box art image</label>
    <input type="text" class="form-control" placeholder="Box art image" name="image">
  </div>

  <div class="form-group">
    <label for="image">Game Trailer</label>
    <input type="text" class="form-control" placeholder="Game Trailer" name="video">
  </div>

  <button type="submit" class="btn btn-primary">Create review</button>

</form>
